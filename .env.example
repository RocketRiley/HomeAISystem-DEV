# Example environment configuration for Clair
# Copy this file to `.env` and adjust values as needed.

# Content filter level: twitch, pg13, enabled, adult, or dev0
FILTER_LEVEL=enabled

# Online mode toggles remote API calls to OpenAI
ONLINE_MODE=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048

# Local LLaMA model settings
LLAMA_MODEL_PATH=
LLAMA_N_CTX=4096
LLAMA_MAX_TOKENS=2048
LLAMA_GPU_LAYERS=0

# Proactive reminders and development shortcuts
SELF_START=true
DEV_MODE=true
HIDE_AI_IDENTITY=false

# Memory storage root (defaults to config/ if empty)
MEMORY_ROOT=

# OSC connection to VRM avatar
OSC_HOST=127.0.0.1
OSC_PORT=9000

# VSeeFace integration
VSEEFACE_PATH=
VSEEFACE_MODEL=

# Speech systems
WAKE_MODEL_PATH=
WHISPER_MODEL_PATH=
PIPER_MODEL_PATH=
PIPER_SPEAKER=

